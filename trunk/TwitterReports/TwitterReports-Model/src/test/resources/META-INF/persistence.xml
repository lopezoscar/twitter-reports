<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
	<!-- =======================================================================
	Datasource for web application, based on hibernate and JPA, used by web issues
	and other web resources.
	 ========================================================================-->
    <persistence-unit name="twitterreports" transaction-type="RESOURCE_LOCAL">
    	<provider>org.hibernate.ejb.HibernatePersistence</provider>
    	<class>com.davinci.twitter.model.Project</class>
    	<class>com.davinci.twitter.model.Keyword</class>
		
    </persistence-unit>
</persistence>